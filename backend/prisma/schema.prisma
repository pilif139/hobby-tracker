generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  name     String
  password String

  hobbies Hobby[]
}

model Hobby {
  id            String         @id @default(uuid())
  name          String
  description   String?
  userId        String
  user          User           @relation(fields: [userId], references: [id])
  hobbySessions HobbySession[]
}

model HobbySession {
  id                String   @id @default(uuid())
  startTime         DateTime
  endTime           DateTime
  durationInSeconds Int?
  notes             String?

  hobbyId String
  hobby   Hobby  @relation(fields: [hobbyId], references: [id])
}
