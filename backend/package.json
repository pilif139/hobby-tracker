{
  "name": "backend",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:local": "bun run --hot src/index.ts",
    "deploy": "wrangler deploy --minify",
    "build": "wrangler deploy --dry-run --outdir dist",
    "check-types": "tsc --noEmit",
    "lint": "eslint --fix"
  },
  "dependencies": {
    "@prisma/adapter-d1": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@scalar/hono-api-reference": "^0.9.37",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "hono": "^4.11.4",
    "hono-zod-openapi": "^1.0.1",
    "wrangler": "^4.59.2",
    "zod": "^4.3.5"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": "prettier --write"
  },
  "devDependencies": {
    "@hono/eslint-config": "^2.0.5",
    "@types/bun": "latest",
    "prisma": "^7.2.0"
  }
}
